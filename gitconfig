[includeIf "hasconfig:remote.*.url:git@github.com:stytchauth/**"]
  path = ~/.gitconfig-work
[include]
  path = ~/.gitconfig.local
[core]
  editor = vim
  excludesfile = ~/.gitignore
  autocrlf = input
[color]
  ui = auto
[alias]
  # Copy current branch name to clipboard ğŸ“‹
  cb = !git rev-parse --abbrev-ref head | pbcopy
  # Quick commit without hooks - "work in progress" ğŸš§
  wip = !git commit --no-verify -m \"wip\"
  # Stage all changes (including untracked) âœ¨
  aa = add --all
  # Interactive staging - choose chunks to add ğŸ”
  ap = add --patch
  # Commit with verbose diff view ğŸ“
  ci = commit -v
  # Amend last commit with current date ğŸ•’
  ca = !git commit --amend -v --date=\"$(date +%Y-%m-%dT%H:%M:%S)\"
  # Shorthand for checkout ğŸ”„
  co = checkout
  # Shorthand for status ğŸ“Š
  st = status
  # Detailed log with stats and signatures ğŸ“œ
  lg = log --stat --summary --show-signature
  # Mark commit to be fixed up in rebase ğŸ”§
  fixup = commit --fixup
  # Mark commit to be squashed in rebase ğŸ¤
  squash = commit --squash
  # Set upstream to origin/current-branch ğŸ”—
  track = !git branch --set-upstream-to=origin/$(git rev-parse --abbrev-ref HEAD)
[push]
  default = current
[pull]
  rebase = false
[fetch]
  prune = true
[init]
  defaultBranch = main
[pager]
  branch = false
[rebase]
  autosquash = true
