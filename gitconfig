[user]
  name = Baylee Schmeisser
  email = github.mx@baylee.dev
[includeIf "gitdir:~/projects/web/"]
  path = ~/.gitconfig-work
[includeIf "exists:~/.gitconfig.local"]
  path = ~/.gitconfig.local
[core]
  editor = vim
  excludesfile = ~/.gitignore
  autocrlf = input
[color]
  ui = auto
[alias]
  cb = !git rev-parse --abbrev-ref head | pbcopy
  wip = !git commit --no-verify -m \"wip\"
  aa = add --all
  ap = add --patch
  ci = commit -v
  ca = !git commit --amend -v --date=\"$(date +%Y-%m-%dT%H:%M:%S)\"
  co = checkout
  st = status
  lg = log --stat --summary --show-signature
  fixup = commit --fixup
  squash = commit --squash
  track = !git branch --set-upstream-to=origin/$(git rev-parse --abbrev-ref HEAD)
  col = "!f() { if [ $# -eq 1 ]; then branch=$(linear-branch-decorator \"$1\"); git checkout -b \"$branch\"; else git checkout \"$@\"; fi; }; f"
[push]
  default = current
[pull]
  rebase = false
[fetch]
  prune = true
[init]
  defaultBranch = main
[pager]
  branch = false
[rebase]
  autosquash = true
