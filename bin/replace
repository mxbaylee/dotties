#!/bin/sh

# Find and replace text in files.
#
# Usage:
#   replace old new
#   replace old new **/*.js

find_this="$1"
shift
replace_with="$1"
shift

items=$(rg -l --no-heading "$find_this" "$@")
temp="${TMPDIR:-/tmp}/replace_temp_file.$$"
IFS=$'\n'
for item in $items; do
  sed "s/$find_this/$replace_with/g" "$item" > "$temp" && mv "$temp" "$item"
done
