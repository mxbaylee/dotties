#!/bin/sh

# This script helps you search for and checkout a Git branch based on a search term.
#
# Usage:
#   git cog <search-term>
#
# Dependencies:
# - `rg` (ripgrep): `brew install ripgrep`.

if [ -z "$1" ]; then
  echo "ğŸ’ Usage: git cog <search-term>"
  exit 1
fi

search_term="$1"

branch=$(git branch | rg "$search_term" | head -n 1 | sed 's/^\* //' | tr -d '[:space:]')

if [ -z "$branch" ]; then
  echo "ğŸ’ No branch found matching '$search_term'"
  exit 1
fi

git checkout "$branch"
