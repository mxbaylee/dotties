#!/bin/sh

# This script helps you search for and checkout a Git branch based on a search term.
#
# Usage:
#   git cog <search-term>
#
# Dependencies:
# - `ag` (The Silver Searcher): `brew install the_silver_searcher`.

if [ -z "$1" ]; then
  echo "Usage: git cog <search-term>"
  exit 1
fi

search_term="$1"

branch=$(git branch | ag "$search_term" | head -n 1 | sed 's/^\* //' | tr -d '[:space:]')

if [ -z "$branch" ]; then
  echo "No branch found matching '$search_term'"
  exit 1
fi

git checkout "$branch"
